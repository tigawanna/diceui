      "path": "examples/stat-demo.tsx",
      "content": "import {\n  ArrowDown,\n  ArrowUp,\n  DollarSign,\n  MoreHorizontal,\n  ShoppingCart,\n} from \"lucide-react\";\nimport {\n  DropdownMenu,\n  DropdownMenuContent,\n  DropdownMenuItem,\n  DropdownMenuTrigger,\n} from \"@/components/ui/dropdown-menu\";\nimport {\n  Stat,\n  StatIndicator,\n  StatLabel,\n  StatTrend,\n  StatValue,\n} from \"@/registry/bases/radix/ui/stat\";\n\nexport default function StatDemo() {\n  return (\n    <div className=\"grid gap-4 sm:grid-cols-2\">\n      <Stat>\n        <StatLabel>Total Revenue</StatLabel>\n        <StatIndicator variant=\"icon\" color=\"success\">\n          <DollarSign />\n        </StatIndicator>\n        <StatValue>$45,231</StatValue>\n        <StatTrend trend=\"up\">\n          <ArrowUp />\n          +20.1% from last month\n        </StatTrend>\n      </Stat>\n\n      <Stat>\n        <StatLabel>Active Users</StatLabel>\n        <StatIndicator variant=\"badge\" color=\"info\">\n          +24\n        </StatIndicator>\n        <StatValue>2,350</StatValue>\n        <StatTrend trend=\"up\">\n          <ArrowUp />\n          +180 from last week\n        </StatTrend>\n      </Stat>\n\n      <Stat>\n        <StatLabel>Total Orders</StatLabel>\n        <StatIndicator variant=\"icon\" color=\"warning\">\n          <ShoppingCart />\n        </StatIndicator>\n        <StatValue>1,234</StatValue>\n        <StatTrend trend=\"down\">\n          <ArrowDown />\n          -4.3% from last month\n        </StatTrend>\n      </Stat>\n\n      <Stat>\n        <StatLabel>Conversion Rate</StatLabel>\n        <DropdownMenu>\n          <DropdownMenuTrigger asChild>\n            <StatIndicator variant=\"action\">\n              <MoreHorizontal />\n            </StatIndicator>\n          </DropdownMenuTrigger>\n          <DropdownMenuContent align=\"end\">\n            <DropdownMenuItem>View details</DropdownMenuItem>\n            <DropdownMenuItem>Export data</DropdownMenuItem>\n            <DropdownMenuItem>Share</DropdownMenuItem>\n          </DropdownMenuContent>\n        </DropdownMenu>\n        <StatValue>3.2%</StatValue>\n        <StatTrend trend=\"neutral\">No change from last week</StatTrend>\n      </Stat>\n    </div>\n  );\n}\n",
      "type": "registry:example",
      "target": ""
    }
  ],

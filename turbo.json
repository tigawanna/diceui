{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "docs#dev": {
      "dependsOn": ["^build", "docs#generate:content"],
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**",
        ".nuxt/**",
        ".source/**"
      ]
    },
    "docs#build": {
      "dependsOn": ["^build", "docs#generate:content"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "cache": false,
      "outputs": []
    },
    "lint:fix": {
      "cache": false,
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "docs#typecheck": {
      "dependsOn": ["^build", "docs#generate:content"],
      "outputs": []
    },
    "generate:content": {
      "dependsOn": ["^build"],
      "outputs": [".source/**"]
    },
    "check": {
      "dependsOn": ["lint", "typecheck"],
      "cache": false,
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"],
      "cache": false,
      "outputs": []
    }
  }
}
